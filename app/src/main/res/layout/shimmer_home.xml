<?xml
    version="1.0"
    encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ic_menu"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/toolbar_view1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginBottom="3dp"
                android:background="@color/grey_subcategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/toolbar_view2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginBottom="3dp"
                android:background="@color/grey_subcategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/toolbar_view3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginBottom="3dp"
                android:background="@color/grey_subcategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/ic_menu"
            app:layout_constraintEnd_toStartOf="@+id/ic_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:id="@+id/ic_cart"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/grey_subcategory"
            android:background="@drawable/radius_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ic_search"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/ic_search"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/grey_subcategory"
            android:background="@drawable/radius_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />
    </LinearLayout>

    <!-- Sub Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_67sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

    </LinearLayout>

    <!-- products place holder -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/grey_subcategory" />
    </LinearLayout>

</LinearLayout>